@model WebClientED.Models.SPAM_CONTROL

@{
    ViewBag.Title = "Control";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Control</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_PERS_ENTI, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.CREATED, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.EMA_SPAM_CONT, new { htmlAttributes = new { @class = "form-control" } })

        @Html.HiddenFor(model => model.ID_SURV_TICK, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">

            <div class="col-md-8 col-md-offset-2">
                &nbsp;
            </div>
        </div>
        <div class="form-group">
           
            <div class="col-md-8 col-md-offset-2">
                Favor indiquenos por que quiere dejar de recibir correos:
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-8 col-md-offset-2">
                @Html.TextAreaFor(model => model.SUM_SPAM_CONT, new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.SUM_SPAM_CONT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" value="Enviar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
