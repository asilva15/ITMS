<script type="text/javascript">
    $(document).ready(function () {
        $("#both1").animate({
            "backgroundColor": "#ee1111"
        }, 1000);

        $.ajax({
            url: "/Account/DateTimeServer",
            data: "var=" + Math.random(),
            type: "GET",
            dataType: "text",
            success: function (source) {
                data = source;
                var elem = source.split('|');
                $("#divDia").html(elem[0]);
                $("#divMonth").html(elem[4]);
                $("#divNameDia").html(elem[5]);
                reloj(parseInt(elem[1]), parseInt(elem[2]), parseInt(elem[3]));
            },
            error: function (dato) {
                
            }
        });
    });

    function reloj(hh, min, seg) {
        seg = seg + 1;
        if (seg == 60) {
            min = min + 1;
            seg = 0;
            if (min == 60) {
                hh = hh + 1;
                min = 0;
                if (hh == 24) { hh = 0; }
            }
        }
        st = (hh < 10 ? "0" + hh : hh) + ":" + (min < 10 ? "0" + min : min);
        $("#divHora").html(st);
        setTimeout("reloj(" + hh + "," + min + "," + seg + ");", 1000);
    }

    function mensaje(tipo, mensaje) {
        if (tipo == "OK") {
            location = "http://" + location.host + "/Home/Principal";
        } else if (tipo == "OK_HB_OT") {
            location = "http://" + location.host + "/Asset/IndexOT";
        } else {
            document.getElementById("txtBloqueo").innerHTML = '';
            document.getElementById("txtBloqueo").innerHTML = mensaje;
        }
    }
</script>

