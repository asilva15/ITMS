                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="editor-label">
                                            Componente <b>*</b>
                                        </div>
                                        <div class="editor-field">
                                            @Html.TextBoxFor(model => model.IdComponente)
                                            @Html.ValidationMessageFor(model => model.IdComponente)
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col-md-4">
                                        <div class="editor-label">
                                            Nombre <b>*</b>
                                        </div>
                                        <div>
                                            @Html.TextBoxFor(model => model.NomSubtComp, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.NomSubtComp)
                                        </div>
                                    </div>

                                    <div class="col-md-8">
                                        <div class="editor-label">
                                            Descripcion
                                        </div>
                                        <div>
                                            @Html.TextBoxFor(model => model.DesSubtComp , new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.DesSubtComp)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col-md-2 ml-auto">
                                        <button id="Buscar" type="button" class="btn btn-primary btn-block" style="float:right;">Buscar</button>
                                    </div>
                                    
                                    <div class="col-md-2">
                                        <button id="submit" class="btn btn-warning btn-block">Crear</button>
                                    </div>

