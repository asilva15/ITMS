    $("#Buscar").click(function () {

        $("#pagerdivComponente").empty();
        $("#divComponente").empty();

        if ($("#divComponente").data("kendoListView")) {
            $("#pagerdivComponente").data("kendoPager").destroy();
            $("#divComponente").data("kendoListView").destroy();
        }

        var dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: "/SubTipoComponente/BuscarListarSubTipoComponentes/0?var",
                    type: "GET",
                    dataType: "json",
                    data: {
                        q: "#kendoui",
                        ran: Math.random(),
                        ID_TYPE_ASSE: $("#IdTipoActivo").val() == '' ? 0 : $("#IdTipoActivo").val(),
                        ID_ACCO: $("#IdAcco").val() == '' ? 0 : $("#IdAcco").val(),
                        IdComponente: $("#IdComponente").val() == '' ? 0 : $("#IdComponente").val(),
                        Nombre: $("#NomSubtComp").val(),
                        Descripcion: $("#DesSubtComp").val()
                    }
                }
            },
            autoSync: true,
            serverFiltering: true,
            serverPaging: true,
            pageSize: 15,
            schema: {
                data: "Data",
                total: "Cantidad"
            }
        });

        $("#pagerdivComponente").kendoPager({
            dataSource: dataSource,
            pageSizes: [5, 10, 15],
            refresh: true
        });

        $("#divComponente").kendoListView({
            dataSource: dataSource,
            template: kendo.template($("#plantillaComponente").html())
        });

    });

</script>

