@{
    Layout = null;
}

<div class="main-card mb-3 card">
    <div class="card-body">
        <div class="col-sm-12 col-lg-12" style="width:100%;" id="allPerformance">
            <form id="ParamIntervalDate">
                <div class="row">
                    <div class="col-sm-12 col-xl-3">
                        Since Day :<br />
                        <input type="text" id="SIN_DATE" name="SIN_DATE" style="width:100%;"/>
                    </div>
                    <div class="col-sm-12 col-xl-3">
                        To Day :<br />
                        <input type="text" id="TO_DATE" name="TO_DATE" style="width:100%;"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="main-card mb-3 card">
    <div class="card-body">
        <iframe id="MSRSAllIntervalDate" style="height:400px; width:100%;border: 0px #eee solid;"></iframe>
    </div>
</div>

<script type="text/javascript">
    function GenerateReport2() {
        window.frames["MSRSAllIntervalDate"].src = "/Reporting/Attendance/AllIntervalDate.aspx?var=" + Math.random() + "&" + $("#ParamIntervalDate").serialize();
    }
</script>

<script type="text/javascript">

    $(document).ready(function () {

        
        $("#SIN_DATE").kendoDatePicker({
            value: new Date('@DateTime.Now.Year', @DateTime.Now.Month-1, 1),
            change: function () {
                GenerateReport2();
            }
        });
        $("#TO_DATE").kendoDatePicker({
            value: new Date('@DateTime.Now.Year', @DateTime.Now.Month-1, '@DateTime.Now.Day'),
            change: function () {
                GenerateReport2();
            }
        });

        GenerateReport2();

    });

</script>