@{
    ViewBag.Title = "DuplicarRol";
    Layout = null;
}
<div class="main-card mb-2 card">
    <div class="card-body">
        <div class="form-row">
            <span>¿Esta seguro que desea<b style="color:red"> Duplicar </b>el Rol?</span>
        </div>
        <br />
        <div class="form-row">
            <div class="col-md-6 ml-auto">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="position-relative form-group">
                            <button type="button" data-dismiss="modal" class="btn btn-secondary btn-block">Cancelar</button>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="position-relative form-group">
                            <button type="button" class="btn btn-primary btn-block" onclick="Duplicar()">Aceptar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function Duplicar() {
        $.ajax({
            type: "POST",
            url: "/Role/DuplicarRolMenuAccion?IdRol=" + @ViewBag.IdRol ,
            cache: false,
            success: function (data) {
                if (data == "ERROR") {
                    toastr.error("Error");
                } else {
                    $("[data-dismiss=modal]").trigger({ type: "click" });
                    toastr.success("Registro Duplicado", "Exito!");
                    $('#roleTable').DataTable().ajax.reload();
                }
            }
        });
    }
</script>