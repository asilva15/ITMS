<script type="text/javascript">

    $(document).ready(function () {

        $("#Buscar").click(function () {

            $("#pagerdivComponente").empty();
            $("#divComponente").empty();
			
            if ($("#divComponente").data("kendoListView")) {
                $("#pagerdivComponente").data("kendoPager").destroy();
                $("#divComponente").data("kendoListView").destroy();
            }
            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: "/SolucionTI/BuscarListarSolucionTITodo/0?var",
                        type: "GET",
                        dataType: "json",
                        data: {
                            q: "#kendoui",
                            ran: Math.random(),
                            NOMBRE: $("#Nombre").val(),
                            ESTADO: $("#EstadoTI").val()==''?'':$("#EstadoTI").val()
                        }
                    }
                },
                autoSync: true,
                serverFiltering: true,
                serverPaging: true,
                pageSize: 15,
                schema: {
                    data: "Data",
                    total: "Cantidad"
                }
            });

            $("#pagerdivComponente").kendoPager({
                dataSource: dataSource,
                pageSizes: [5, 10, 15],
                refresh: true
            });

            $("#divComponente").kendoListView({
                dataSource: dataSource,
                template: kendo.template($("#plantillaComponente").html())
            });

        });

        $("#Buscar").click();



        var Estadof = [ { text: "Activo", value: "1" }, { text: "Inactivo", value: "0" }];

        var Estado = $("#EstadoTI").kendoComboBox({
            autoBind: true,
            dataTextField: "text",
            dataValueField: "value",
            suggest: true,

            filter: "contains",
            delay: 500,
            minLength: 0,
            suggest: true,

            dataSource: Estadof,
            index: 0
        }).data("kendoComboBox");



        

        $("#reset").click(function (event) {
            event.preventDefault();
            location.reload(true);
        });


    });

</script>


