@model ERPElectrodata.Models.SolucionTI

@{
    ViewBag.Title = "EditarSol";
    Layout = null;
}
<script>
    $(document).ready(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>

<div id="FormEditarCuenta">
    <div class="form-row" id="divContainerNewTicket">
        <div class="col-md-12">
            <div id="divNuevaLicencia">
                <!--Declaración de Formulario-->
                @using (Html.BeginForm("EditarCom", "SolucionTI", FormMethod.Post, new { enctype = "multipart/form-data", id = "FormEditarCuenta", target = "upload_target" }))
                {
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.UserIdCreacion)
                    @Html.HiddenFor(model => model.FechaCreacion)


                    <fieldset>
                        @*<legend>Editar Solucion TI</legend>*@

                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="editor-label">
                                        Nombre<b>*</b>
                                    </div>
                                    <input id="Nombre" class="form-control" type="text" name="Nombre" value="@ViewBag.Nombre">
                                </div>


                                <div class="col-md-5 ml-auto">
                                    <div class="editor-label">
                                        Estado
                                    </div>
                                    <div class="mt-2">
                                        @Html.CheckBox("Estado", "@ViewBag.Estado")
                                        @Html.ValidationMessageFor(model => model.Estado)
                                    </div>
                                </div>
                            </div>
                        </div>

