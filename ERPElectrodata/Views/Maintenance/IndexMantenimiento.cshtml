<script type="text/javascript">

    $(document).ready(function () {

        ////$("#spanTitulo").html('CUENTA TIPO ACTIVO');
        //$("#divCuerpo").load("/TipoActivo/CrearCuentaTA?var=" + Math.random());
        //$("#spanTitulo").html('LOCACIÓN');
        $("#divCuerpo").load("/Location_Entity/IndexLocacion?var=" + Math.random());

        $("#btnLocacion").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('LOCACIÓN');
            $("#divCuerpo").load("/Location_Entity/IndexLocacion?var=" + Math.random());
        });

        $("#btnCuentaTA").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('CUENTA TIPO ACTIVO');
            $("#divCuerpo").load("/TipoActivo/CrearCuentaTA?var=" + Math.random());
        });

        $("#btnComponente").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('COMPONENTE');
            $("#divCuerpo").load("/Componente/CrearComp?var=" + Math.random());
        });

        $("#btnSubTipoComp").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('SUB TIPO COMPONENTE');
            $("#divCuerpo").load("/SubTipoComponente/CrearSTC?var=" + Math.random());
        });

        $("#btnTicketsProblema").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('TICKET PROBLEMA');
            $("#divCuerpo").load("/Ticket/CrearTicketProblemaConfig?var=" + Math.random());
        });

        $("#btnSolutionTI").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('SOLUCION TI');
            $("#divCuerpo").load("/SolucionTI/CrearSolucionTI?var=" + Math.random());
        });

        $("#btnCompanias").click(function () {
            $("#divCuerpo").empty();
            $("spanTitulo").html('Companias');
            $("#divCuerpo").load("/Companias/IndexCompania?var=" + Math.random());
        });

        $("#btnManufacturer").click(function () {
            $("#divCuerpo").empty();
            $('spanCuerpo').html('Marcas');
            $("#divCuerpo").load("/Manufacturer/IndexManufacturer?var=" + Math.random());
        });

        $("#btnManufacturerModel").click(function () {
            $("#divCuerpo").empty();
