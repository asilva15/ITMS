            $("#divCuerpo").load("/CommercialModel/IndexMantCommercialModel?var=" + Math.random());
        });

        $("#btnSLA").click(function () {
            $("#divCuerpo").empty();
            $('#spanTitulo').html('Acuerdos de Nivel de Servicio');
            $("#divCuerpo").load("/SLA/IndexMantSLA?var=" + Math.random());
        });

        $("#btnPerfilActivos").click(function () {
            $("#divCuerpo").empty();
            $('spanCuerpo').html('Perfil de Activos');
            $("#divCuerpo").load("/PerfilActivos/IndexPerfilActivo?var=" + Math.random());
        });

        $("#btnCapacidad").click(function () {
            $("#divCuerpo").empty();
            $('spanCuerpo').html('Gestión de la Capacidad');
            $("#divCuerpo").load("/Capacidad/Index?var=" + Math.random());
        });

        //----------- Grupos y Plantilla 27/10/2021  -------------


        $("#btnGrupo").click(function () {
            $("#divCuerpo").empty();
            $('#spanTitulo').html('GRUPO');
            $("#divCuerpo").load("/Grupo/IndexMantGrupo?var=" + Math.random());
        });

        $("#btnPlantilla").click(function () {
            $("#divCuerpo").empty();
            $('#spanTitulo').html('PLANTILLA');
            $("#divCuerpo").load("/Plantilla/IndexMantPlantilla?var=" + Math.random());
        });



        //Area Cargo

        $("#btnArea").click(function () {
            $("#divCuerpo").empty();
            $('#spanTitulo').html('Area');
            $("#divCuerpo").load("/Area/IndexMantAreas?var=" + Math.random());
        });

        $("#btnCargo").click(function () {
            $("#divCuerpo").empty();
            $('#spanTitulo').html('Cargo');
            $("#divCuerpo").load("/Cargo/IndexMantCargos?var=" + Math.random());
        });







        //----------- Administrador -------------
        $("#btnCuenta").click(function () {
            $("#divCuerpo").empty();
            $('spanCuerpo').html('Mantenimiento de Cuentas');
            $("#divCuerpo").load("/Account/IndexCuenta?var=" + Math.random());
        });

        $("#btnCola").click(function () {
            $("#divCuerpo").empty();
            $('spanCuerpo').html('Mantenimiento de Colas');
            $("#divCuerpo").load("/Queue/IndexCola?var=" + Math.random());
        });

        $("#btnCuentaCola").click(function () {
            $("#divCuerpo").empty();
            $('spanCuerpo').html('Relación de Cuentas - Colas');
            $("#divCuerpo").load("/AccountQueue/IndexCuentaCola?var=" + Math.random());
        });

    });

</script>
