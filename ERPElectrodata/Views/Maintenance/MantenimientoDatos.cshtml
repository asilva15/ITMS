<link href="~/Content/themes/plugin/toastr/toastr.min.css" rel="stylesheet" />

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="fa fa-cog icon-gradient bg-sunny-morning"> </i>
            </div>
            <div>
                Mantenimiento de Datos
                <div class="page-title-subheading">
                    Listado de mantenimiento de datos maestros.
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <div class="row">
            <div class="col-md-12">
                <div class="main-card mb-3 card">
                    <div class="card-body">
                        <div class="card-title">Opciones</div>
                        <div class="bodyForm">
                            <div class="">
                                <div id="divOpciones" style="padding:5px;" background-color:white">
                                    <center>
                                        <button id="btnTipoActivo" class="btn btn-block btn-sm btn-primary">Tipo Activo</button>
                                        <button id="btnMarca" class="btn btn-block btn-sm btn-primary">Marca</button>
                                        <button id="btnModeloComercial" class="btn btn-block btn-sm btn-primary">Modelo Comercial</button>
                                        <button id="btnLocacion" class="btn btn-block btn-sm btn-primary">Locación</button>
                                        <button id="btnContrato" class="btn btn-block btn-sm btn-primary">Contrato</button>
                                        @if (Convert.ToInt32(Session["SUPERVISOR_ACTIVOS_BNV_MOVIL"].ToString()) == 1)
                                        {
                                            <button id="btnOperador" class="btn btn-block btn-sm btn-primary">Operador</button>
                                            <button id="btnPlan" class="btn btn-block btn-sm btn-primary">Plan</button>
                                            <button id="btnAplicacion" class="btn btn-block btn-sm btn-primary">Aplicaciones Móviles</button>
                                        }
                                        <button id="btnExcepUsuarios" class="btn btn-block btn-sm btn-primary">Excepción de Usuarios</button>
                                    </center>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-10">
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3 card">
                    <div class="card-header">
                        <span id="spanTitulo" style="font-size:12.5px"></span>
                    </div>
                    <div class="card-body" id="divCuerpo">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        $("#btnTipoActivo").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('TIPO ACTIVO');
            $("#divCuerpo").load("/Maintenance/MantTipoActivoBNV/@ViewBag.IdGrupo?var=" + Math.random());
        });

        $("#btnMarca").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('MARCA');
            $("#divCuerpo").load("/Maintenance/MantMarcaBNV/@ViewBag.IdGrupo?var=" + Math.random());
        });

        $("#btnModeloComercial").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('MODELO COMERCIAL');
            $("#divCuerpo").load("/Maintenance/MantModeloComercialBNV/@ViewBag.IdGrupo?var=" + Math.random());
        });

        $("#btnLocacion").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('LOCACION');
            $("#divCuerpo").load("/Maintenance/MantLocacionBNV/@ViewBag.IdGrupo?var=" + Math.random());
        });

        $("#btnContrato").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('CONTRATO');
            $("#divCuerpo").load("/Maintenance/MantContratoBNV/@ViewBag.IdGrupo?var=" + Math.random());
        });

        $("#btnOperador").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('OPERADOR');
            $("#divCuerpo").load("/Maintenance/MantOperadorBNV/@ViewBag.IdGrupo?var=" + Math.random());
        });

        $("#btnPlan").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('PLAN');
            $("#divCuerpo").load("/Maintenance/MantPlanBNV/@ViewBag.IdGrupo?var=" + Math.random());
        });

        $("#btnAplicacion").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('APLICACIONES MÓVILES');
            $("#divCuerpo").load("/Maintenance/MantAplicacionBNV?var=" + Math.random());
        });

        $("#btnExcepUsuarios").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('EXCEPCION USUARIOS');
            $("#divCuerpo").load("/Maintenance/MantExcepUsuarioBNV/@ViewBag.IdGrupo?var=" + Math.random());
        });

        $("#btnTipoActivo").click();

    });

</script>