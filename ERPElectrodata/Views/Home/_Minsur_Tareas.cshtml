    function cambioEstadoTareas(estado) {

        var listaPendientes = document.getElementById("listaPendientes")
        var listaSinAsignar = document.getElementById("listaSinAsignar")
        var listaTerminadas = document.getElementById("listaTerminadas")
        var listaNoProcedentes = document.getElementById("listaNoProcedentes")

        switch (estado) {
            case "listaPendientes":
                listaPendientes.style.display = "block";
                listaSinAsignar.style.display = "none";
                listaTerminadas.style.display = "none";
                listaNoProcedentes.style.display = "none";
                break;
            case "listaSinAsignar":
                listaSinAsignar.style.display = "block";
                listaPendientes.style.display = "none";
                listaTerminadas.style.display = "none";
                listaNoProcedentes.style.display = "none";
                break;
            case "listaTerminadas":
                listaTerminadas.style.display = "block";
                listaSinAsignar.style.display = "none";
                listaPendientes.style.display = "none";
                listaNoProcedentes.style.display = "none";
                break;
            case "listaNoProcedentes":
                listaNoProcedentes.style.display = "block";
                listaSinAsignar.style.display = "none";
                listaTerminadas.style.display = "none";
                listaPendientes.style.display = "none";
                break;
        }

    }
</script>
