            document.getElementById("listViewCuentas").style.display = "block"
            document.getElementById("listaGrupo").style.display = "none"
        } else if (parm.id == "homInc6") {
            bandera = 5;
            document.getElementById("listViewCuentas").style.display = "block"
            document.getElementById("listaGrupo").style.display = "none"
        } else if (parm.id == "homInc7") {
            bandera = 4;
            document.getElementById("listViewCuentas").style.display = "block"
            document.getElementById("listaGrupo").style.display = "none"
        } else if (parm.id == "homInc8") {
            alert(1);
