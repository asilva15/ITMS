<script type="text/javascript">

    $(document).ready(function () {

        $("#Buscar").click(function () {

            $("#pagerdivCompania").empty();
            $("#divCompania").empty();

            if ($("#divCompania").data("kendoListView")) {
                $("#pagerdivCompania").data("kendoPager").destroy();
                $("#divCompania").data("kendoListView").destroy();
            }
            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: "/Companias/BuscarListarCompaniaTodo/0?var",
                        type: "GET",
                        dataType: "json",
                        data: {
                            q: "#kendoui",
                            ran: Math.random(),
                            COMPANIA: $("#COM_NAME").val(),
                            RUC: $("#NUM_TYPE_DI").val(),
                            VIGENCIA: $("#VigenciaC").val() == '' ? '' : $("#VigenciaC").val()
                        }
                    }
                },
                autoSync: true,
                serverFiltering: true,
                serverPaging: true,
                pageSize: 15,
                schema: {
                    data: "Data",
                    total: "Cantidad"
                }
            });

            $("#pagerdivCompania").kendoPager({
                dataSource: dataSource,
                pageSizes: [5, 10, 15],
                refresh: true
            });

            $("#divCompania").kendoListView({
                dataSource: dataSource,
                template: kendo.template($("#plantillaCompania").html())
            });

        });

        $("#Buscar").click();

        var Vigenciaf = [{ text: "Activo", value: "1" }, { text: "Inactivo", value: "0" }];

        var Estado = $("#VigenciaC").kendoComboBox({
            autoBind: true,
            dataTextField: "text",
            dataValueField: "value",
            suggest: true,

            filter: "contains",
            delay: 500,
            minLength: 0,
            suggest: true,

            dataSource: Vigenciaf,
            index: 0
        }).data("kendoComboBox");

        //$("#reset").click(function (event) {
        //    event.preventDefault();
        //    location.reload(true);
        //});
    
    });


</script>

