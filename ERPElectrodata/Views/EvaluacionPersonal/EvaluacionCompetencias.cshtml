@{
    Layout = null;
}

<style>
    .container {
        width: 100%;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    th, td {
        padding: 8px 10px;
        text-align: left;
        border: 1px solid #ccc;
        font-size: 12px;
        color: #555;
    }

    th {
        background-color: #e0e0e0;
        font-weight: 600;
    }

    tr:nth-child(even) {
        background-color: #f7f7f7;
    }

    tr:hover {
        background-color: #e9e9e9;
    }

    h4 {
        font-weight: bold;
        padding-top: 10px;
        font-size: 18px;
        color: #333;
    }
</style>

