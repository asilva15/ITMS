        });

        var todayDate = kendo.toString(kendo.parseDate(new Date()), 'MM/dd/yyyy');
        var FechaIni = $("#FechaIni").kendoDatePicker({ format: "MM/dd/yyyy" }).data("kendoDatePicker");
