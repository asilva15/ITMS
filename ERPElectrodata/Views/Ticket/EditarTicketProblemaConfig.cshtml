@model ERPElectrodata.Models.TicketConfiguracion
@{
    ViewBag.Title = "Editar";
    Layout = null;
}
    <div id="FormEditarTicketProblema">
        <div class="form-row" id="divContainerNewTicket">
            <div class="col-md-12">
                <div id="divNuevaLicencia">
                    <!--Declaración de Formulario-->
                    @using (Html.BeginForm("EditarTicketProblemaConfig", "Ticket", FormMethod.Post, new { enctype = "multipart/form-data", id = "FormEditarTicketProblema", target = "upload_target" }))
                    {
                        @Html.HiddenFor(model => model.IdTicketConfig)
                        @Html.HiddenFor(model => model.IdCuenta)
                        @Html.HiddenFor(model => model.FechaProceso)

                        <input type="hidden" name="ID" id="ID" value="@ViewBag.IdTicketConfig" />

                        <fieldset>
                            @*<legend>Editar Ticket Problema</legend>*@

                            <div class="form-group">
                                <div class="form-row">

                                    <div class="col-md-6">
                                        <div class="editor-label">
                                            Cuenta
                                        </div>
                                        <input id="NAM_ACCO" class="form-control" type="text" name="NAM_ACCO" value="@ViewBag.NAM_ACCO" disabled="disabled">
                                    </div>

                                    <div class="col-md-6">
                                        <div class="editor-label">
                                            Meses <b>*</b>
                                        </div>

                                        <div class="">
                                            <input id="TiempoMesesE" type="number" name="TiempoMesesE" value="@ViewBag.TiempoMeses" />
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-row">

                                    <div class="col-md-6">
                                        <div class="editor-label">
                                            Nro de Tickets <b>*</b>
                                        </div>

                                        <div class="">
                                            <input id="NroCategoriasE" type="number" name="NroCategoriasE" value="@ViewBag.NroCategorias" />
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="editor-label">
                                            Fecha Ultima de Proceso
                                        </div>
                                        <input id="FechaProceso" class="form-control" type="text" name="FechaProceso" value="@ViewBag.FechaProceso" disabled="disabled" />
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3 ml-auto">
                                            <button id="submit" class="btn btn-primary btn-block">Guardar</button>
                                        </div>
                                        <div class="col-md-3">
                                            <button id="btnCancelar" class="ladda-button mb-2 btn btn-gradient-light btn-block widthMax" data-style="expand-right" data-dismiss="modal">
                                                <span class="ladda-label">Cancelar</span><span class="ladda-spinner"></span>
                                            </button>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>

<!--Cuadro necesario para enviar archivos Adjuntos si realizar reload de toda la página.-->
