@model  ERPElectrodata.Models.SolicitudPersonal

@{
    Layout = null;
}

<style>
    .k-maskedtextbox {
        width: 100%;
    }
</style>
<link href="~/Content/themes/plugin/toastr/toastr.min.css" rel="stylesheet" />
<script src="~/Content/themes/plugin/toastr/toastr.min.js"></script>
@*<script type="text/javascript" src="js/jquery.js"></script>*@

@*<div class="box">*@


@using (Html.BeginForm("IngresarDuracion", "SeleccionSolicitudPersonal", FormMethod.Post, new { enctype = "multipart/form-data", id = "FrmIngresarBeneficio", target = "upload_target" }))
{
    @Html.ValidationSummary(true)


    <input type="hidden" id="Id" name="Id" value="@ViewBag.Id" />
    <div class="row">
        <div class="col-md-12" style="text-align:center">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <form class="">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label id="lblDuracionContrato" for="DuracionContrato" class="">Ingrese la Duración del Contrato</label>

                                </div>
                            </div>



                        </div>
                        <div class="form-row">

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label id="lblDuracionContrato" for="DuracionContrato" class="">Duración <span style="color:red">*</span></label>

                                </div>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.DuracionContrato)
                                @Html.ValidationMessageFor(model => model.DuracionContrato)
                            </div>
                        </div>
                        <div class="form-row">


                            <div class="col-md-12" style="text-align:center;">
                                <div class="position-relative form-group">
                                    <button type="submit" id="btnDuracionContrato" class="btn-shadow btn btn-success btn-sm">Guardar Duración </button>
                                </div>
                            </div>

                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>



}




<iframe id="upload_target" name="upload_target" src="" class="frameHidden" style="display:none"></iframe>
<script>
    $(document).ready(function () {


        $("#DuracionContrato").kendoMaskedTextBox({
            mask: ""
        });

    });
    function uploadDone(msg) {
        if (msg == "OK") {

            toastr.success("Se Ingreso la Duración del Contrato.", "Duración Ingresada");

            $(".modal-backdrop").remove();
            $("#miModal").removeClass("show");//'#modal-content

            ObtenerDatosSolicitud();
        }

        else {
            toastr.success("Error.", "Error Ingresado");

            $(".modal-backdrop").remove();
            $("#miModal").removeClass("show")
        }

    }
</script>