@model ERPElectrodata.Models.NAME_CHART
@{
    Layout = null;
}

<style>
    b {
        color: #F83C50;
    }
</style>
@if (Convert.ToInt32(Session["ID_ACCO"].ToString()) != 55)
{
    <script>window.location.href = "~/Maintenance/IndexMantenimiento";</script>
}
<div style="width:100%; display:inline-block;">
    @using (Html.BeginForm("EdicionCargo", "Cargo", FormMethod.Post, new { enctype = "multipart/form-data", id = "FormNewRequest", name = "FormNewRequest", target = "ut_NewRequest" }))
    {
        @Html.ValidationSummary(true)


        <input id="txtidCargo" name="txtidCargo" class="form-control" value="@ViewBag.ID_NAM_CHAR" type="hidden" />


        <div class="col-md-12">


            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <div class="editor-label">
                            CLIENTE<b></b>
                        </div>
                        <div>
                            <input id="txtIdaccoCargo" name="txtIdaccoCargo" class="form-control" value="@ViewBag.NAM_ACCO" type="text" disabled="disabled" />


                        </div>
                    </div>
                </div>

            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <div class="editor-label">
                            Nombre Cargo <b>*</b>
                        </div>
                        <div>
                            <input id="txtNombreCargoed" name="txtNombreCargoed" class="form-control" value="@ViewBag.NAM_CHAR" type="text" required />


                        </div>
                    </div>
                </div>

            </div>

        </div>




        @*---------------------------Footer--------------------------------------------------------*@

        <div class="card-footer">

            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="editor-label">
                            <label for="checkareaPrincipal">
                                <input type="checkbox" id="checkareaPrincipaled" name="checkareaPrincipaled" style="vertical-align: middle;">
                                ACTIVO

                            </label>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <button id="submitRequest" class="btn btn-primary btn-block">Guardar</button>

                    </div>
                    <div class="col-md-3">
                        <button id="btnCancelar" class="ladda-button mb-2 btn btn-gradient-light btn-block widthMax" data-style="expand-right" data-dismiss="modal">
                            <span class="ladda-label">Cancelar</span><span class="ladda-spinner"></span>
                        </button>
                    </div>
                </div>

            </div>

        </div>


    }
    <iframe id="ut_NewRequest" name="ut_NewRequest" src="" class="d-none" @*style="width:0px;height:0px;border-width:0px;display:none;"*@></iframe>
</div>


<script>
    $(document).ready(function () {


      if("@ViewBag.VIG_CHAR"=="1"){
          $("#checkareaPrincipaled").attr('checked',true)
        }else{
          $("#checkareaPrincipaled").attr('checked',false)
        }





    });
</script>


<script type="text/javascript">

    $(document).ready(function () {



        //.data("kendoComboBox");
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });

        //ListarPlantilla();
    });


    function uploadDoneNR(msg, msnErr) {
        if (msg == 'OK') {
            toastr.success(msnErr);
            $("#btnBuscar").click();
            $("#btnCancelar").click();
        }
        else {
            toastr.error(msnErr);
        }
    }

</script>

