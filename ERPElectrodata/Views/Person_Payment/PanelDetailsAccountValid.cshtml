@model ERPElectrodata.Models.PERSON_PAYMENT

@{
    Layout = null;
}

<div style="width:100%;" id="divContentDetailsAccountValid"></div>

<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            url: "/Person_Payment/DataAccountValid/@ViewBag.ID_PERS_ENTI/@ViewBag.ID_TYPE_PAYM",
            data: "var=" + Math.random(),
            cache: false,
            type: "GET",
            dataType: "json",
            success: function (source) {
                data = source;
                showInfoAccountValid();
            },
            error: function (source) {
                //alert("Error Carga Json");
            }
        });
    });

    function showInfoAccountValid()
    {
        $.each(data['data'], function (index, value) {
            $("#divContentDetailsAccountValid").append(
                '<div class="col-lg-12">' +
                        '<div class = "smallField"><b>@ResourceLanguaje.Resource.Bank</b></div>' +
                        '<div class = "smallTitle">' + (data['data'][index]['NAM_BANK']) + '</div>' +
                '</div>' +
                '<div class="col-lg-12">' +
                        '<div class = "smallField"><b>@ResourceLanguaje.Resource.NumberAccount</b></div>' +
                        '<div class = "smallTitle">' + (data['data'][index]['NUM_ACCO']) + '</div>' +
                '</div>' +
                '<div class="col-lg-12">' +
                        '<div class = "smallField"><b>@ResourceLanguaje.Resource.AccountOpeningDate</b></div>' +
                        '<div class = "smallTitle">' + (data['data'][index]['DAT_STAR']) + '</div>' +
                '</div>');
        });
    }
</script>
