        });

        $("#btnActividadSemanal").click(function () {
            $("#divCuerpo").empty();
            $("#divCuerpo").load("/Activity/ReporteActividadSemanal?var=" + Math.random());
        });

        $("#btnReporteTicket").click(function () {
            $("#divCuerpo").empty();
            $("#divCuerpo").load("/Supervision/RptReporteTicket?var=" + Math.random());
        });
        
    });

</script>
