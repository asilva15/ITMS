            $("#divCuerpo").load("/Supervision/RptTiempo?var=" + Math.random());
        });

        $("#btnTiempoR").click(function () {
            $("#divCuerpo").empty();
            $("#divCuerpo").load("/Supervision/RptTiempoRequerimiento?var=" + Math.random());
        });

        $("#btnSLAInci").click(function () {
            $("#divCuerpo").empty();
            $("#divCuerpo").load("/Supervision/RptSLA?var=" + Math.random());
        });

        $("#btnSLAReq").click(function () {
            $("#divCuerpo").empty();
            $("#divCuerpo").load("/Supervision/RptSLAReq?var=" + Math.random());
        });

        $("#btnCargaLaboral").click(function () {
            $("#divCuerpo").empty();
            $("#divCuerpo").load("/Supervision/RptCargaLaboral?var=" + Math.random());
        });

        $("#btnActividad").click(function () {
            $("#divCuerpo").empty();
            $("#divCuerpo").load("/Ticket/ReporteActividadTicket?var=" + Math.random());
        });

        $("#btnTicketActivo").click(function () {
            $("#divCuerpo").empty();
