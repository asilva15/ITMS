<style>
    .ulConfig {
        list-style: none;
        color: beige;
        margin-top: 0;
        padding: 0;
        border: 0px solid red;
    }

        .ulConfig li {
            padding: 0px;
            list-style: none;
            margin: 0px;
        }

            .ulConfig li a {
                padding: 0px;
                margin: 0px;
                list-style: none;
                /*color:white;*/
                color: white;
                width: 100%;
                text-decoration: none;
            }

                .ulConfig li a :hover {
                    background-color: darkblue;
                    /*color:black;*/
                    font-weight: 600;
                }

                .ulConfig li a div {
                    padding: 2px 10px 2px 10px;
                }
</style>

<div style="padding:5px 10px 5px 10px;">
    <div style="width:100%;">
        <div style="float:left;width:40%;">
            <img height="120" src="~/Content/Fotos/@Session["ID_FOTO"]" class="img-circle" />
        </div>
        <div style="float:right;width:55%;">
            <ul class="ulConfig">
                <li><a href="/Talent/Profile/@Session["ID_PERS_ENTI"]" class="btn btn-warning btn-xs"><div>Perfil</div></a></li>
                <li><a href="/Account/Manage/0" class="btn btn-warning btn-xs"><div>Cambiar Password</div></a></li>
                <li><br /></li>
                <li style="border-top:1px solid #808080;">
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <a style="text-decoration:none;" class="btn btn-danger btn-xs" href="javascript:document.getElementById('logoutForm').submit()">
                            <div>Cerrar Sesión</div>
                        </a>
                    }
                </li>
            </ul>
        </div>
    </div>
</div>