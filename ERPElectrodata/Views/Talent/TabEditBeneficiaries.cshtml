@model ERPElectrodata.Models.CLASS_ENTITY

@{
    Layout = null;
}
<script src="~/Content/themes/plugin/toastr/toastr.min.js"></script>
<link href="~/Content/themes/plugin/toastr/toastr.min.css" rel="stylesheet" />
<div class="col-lg-12">
    <div class="row">
        <div class="col-sm-6">
            <div class="mb-3 card">
                <div class="card-header-tab card-header">
                    <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                        Beneficiarios
                    </div>
                </div>
                <div class="p-0 card-body">
                    <div class="p-1 slick-slider-sm mx-auto">
                        <div class="slick-slider">
                            <div class="inBodyFormRBL" style="width: 99.7%;  display: inline-block; overflow-y: auto;" id="divBeneficiaries">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div id="diveditbene" style="display:none;">
                <div class="mb-3 card">
                    <div class="card-header-tab card-header">
                        <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                            Editar Beneficiario
                        </div>
                    </div>
                    <div class="p-0 card-body">
                        <div class="p-1 slick-slider-sm mx-auto">
                            <div class="slick-slider">
                                <div class="inBodyFormRBL" style="height:455px; display:inline-block;" id="divNewBene">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="width:1%;min-width:5px;height:1px;float:left;"></div>
                <div style="width:42%; float:left;">
                    <div style="width:100%; float:right;">
                        <div class="titleForm">
                            <div class="title" id="divTitleBene"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="diveditAtta" style="display:none;">
                <div class="mb-3 card">
                    <div class="card-header-tab card-header">
                        <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                            Adjuntos por Beneficiario
                        </div>
                    </div>
                    <div class="p-0 card-body">
                        <div class="p-1 slick-slider-sm mx-auto">
                            <div class="slick-slider">
                                <div class="inbodyformrbl" style="height:455px; display:inline-block; padding:10px;" id="divAttaBene"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $("#divBeneficiaries").empty();
        $("#divBeneficiaries").load("/Talent/ListBeneficiaries?id=@ViewBag.ID_PERS_ENTI&var=" + Math.random());

        $("#divNewBene").empty();
        $("#divNewBene").load("/Beneficiary/EditBeneficiary?id=@ViewBag.ID_PERS_ENTI&var=" + Math.random());

    });
</script>
