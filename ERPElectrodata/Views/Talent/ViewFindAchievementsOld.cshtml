                },
                transport: {
                    read: "/TypeDocument/ListTypeDocumentsAchievements?var=" + Math.random()
                }
            }
        });
        var ID_TYPE_DOCU = $("#ID_TYPE_DOCU").data("kendoComboBox");

        var IdPersona = $("#ID_PERS_ENTI").kendoComboBox({
            index: 1,
            dataTextField: "CLIE",
