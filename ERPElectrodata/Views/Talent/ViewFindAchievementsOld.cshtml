<script type="text/javascript">
    var sw1 = 0;
    var sw2 = 0;
    $(document).ready(function () {

        $("#ID_TYPE_DOCU").kendoComboBox({
            dataTextField: "NAM_DOCU",
            dataValueField: "ID_TYPE_DOCU",
            filter: "contains",
            autoBind: false,
            delay: 500,
