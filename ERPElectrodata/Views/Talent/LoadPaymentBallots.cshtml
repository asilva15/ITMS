        ID_PERS_ENTI.bind("dataBound", function (e) {
            LoadPaymentBallots(ID_PERS_ENTI.dataItem().ID_PERS_ENTI);
        });

        ID_PERS_ENTI.bind("change", function (e) {
            LoadPaymentBallots(ID_PERS_ENTI.dataItem().ID_PERS_ENTI);
        });

