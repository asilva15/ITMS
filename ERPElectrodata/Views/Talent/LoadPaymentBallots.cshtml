    function mensajeCarga(msg, error) {
        if (msg == 'OK') {

            var ID_PERS_ENTI_EMP = $("#ID_PERS_ENTI_EMP").data("kendoDropDownList");
            var ID_PERS_ENTI = $("#ID_PERS_ENTI").data("kendoDropDownList");
