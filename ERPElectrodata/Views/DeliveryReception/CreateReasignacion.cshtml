                                @*<div style="float:left;">
                                        <button id="addAsset" class="k-button">Agregar Activo</button>
                                    </div>*@
                                <div class="divSpace3"></div>
                                <div style="float:left;">
                                    <button id="submit" class="btn btn-primary btn-sm">Crear</button>
                                </div>
                                <div class="divSpace3"></div>
