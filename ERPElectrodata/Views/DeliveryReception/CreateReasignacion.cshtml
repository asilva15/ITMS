                }
            }
        });
        var ID_PERS_ENTI = $("#ID_PERS_ENTI").data("kendoComboBox");

        $("#IdPersAsignacion").kendoComboBox({
            dataTextField: "CLIE",
            dataValueField: "ID_PERS_ENTI",
            filter: "contains",
            autoBind: false,
            delay: 500,
            minLength: 0,
            suggest: true,
            dataSource: {
                schema: {
                    data: "Data",
                    total: "Count"
                },
                transport: {
                    read: "/AccountEntity/PersonaPorCompania?var=" + Math.random()
                }
            }
