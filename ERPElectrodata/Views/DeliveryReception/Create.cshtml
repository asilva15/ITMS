                        $("#bMicroinformatico").hide();
                        $("#divMicroinformatico").show();
                        $("#divExcepcionUsuarios").show();
                    }
                    else if (IdGrupoActivo.text() == "INFRAESTRUCTURA") {
                        $("#bMicroinformatico").show();
                        $("#divMicroinformatico").hide();
                        $("#divExcepcionUsuarios").hide();
                        $("#Ubicacion").val("");
                    }
                    else if (IdGrupoActivo.text() == "MOVIL") {
                        $("#bMicroinformatico").show();
                        $("#divMicroinformatico").hide();
                        $("#divExcepcionUsuarios").show();
                        $("#Ubicacion").val("");
