                $("#bMicroinformatico").hide();
                $("#divMicroinformatico").show();
                $("#divExcepcionUsuarios").show();
            } else if ("@ViewBag.Grupo" == "MOVIL") {
                $("#divExcepcionUsuarios").show();
            }

            var IdGrupoActivo = $("#IdGrupoActivo").kendoComboBox({
                dataTextField: "Nombre",
                dataValueField: "Id",
                filter: "contains",
                autoBind: true,
                delay: 500,
                minLength: 0,
                suggest: true,
                dataSource: {
                    schema: {
                        data: "Data",
                        total: "Count"
                    },
                    transport: {
                        read: "/Asset/ListarGruposBNV?var=" + Math.random()
                    }
                },
                change: function (e) {
                    ids = '';
                    $("#divAssetsAdd").empty();
                    $("#txtActivo").val("");

