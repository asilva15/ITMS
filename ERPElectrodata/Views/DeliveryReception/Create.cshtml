                    $("#btnGestionarCambio").hide();
                } else {
                    $("#btnGestionarCambio").show();
                }
            } else {
                $("#alertaPerfilActivo").show();
                $("#btnGestionarCambio").hide();
            }
        }

        if (@ViewBag.IdAcco == 55) {
            var ID_PERS_ENTI = $("#ID_PERS_ENTI").kendoComboBox({
            dataTextField: "Usuario",
            dataValueField: "ID_PERS_ENTI",
            filter: "contains",
            autoBind: true,
            delay: 500,
            minLength: 0,
            suggest: true,
            dataSource: {
                schema: {
                    data: "Data",
                    total: "Count"
                },
                transport: {
                    read: "/AccountEntity/ListarPersonaPorCompania?IdPersEnti="+@ViewBag.IdPersEnti+"&var=" + Math.random()
                }
            }
            }).data("kendoComboBox");

            ID_PERS_ENTI.bind("change", function (e) {
                ObtenerCargoxUsuario(ID_PERS_ENTI.dataItem().ID_PERS_ENTI);
