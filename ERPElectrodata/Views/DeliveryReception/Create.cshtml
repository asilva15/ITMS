            $(".divLocaText").removeClass('divHide');
        } else {
            $(".cMinsur").addClass('divHide');
            $(".divLocaText").addClass('divHide');
        }
        $("#alertaPerfilActivo").hide();
        @*if(@ViewBag.TienePerfil == 0){
