                        data: "Data",
                        total: "Count"
                    },
                    transport: {
                        read: "/Asset/ListarUMineraBNV?var=" + Math.random()
                    }
                },
                dataBound: function (e) {
                    if (ID_COMP.dataSource.view().length == 1) {
                        ID_COMP.select(0);
                    }
                },
                change: function (e) {
                    ids = '';
                    $("#divAssetsAdd").empty();
                    $("#txtActivo").val("");

                    ID_PERS_ENTI.value("");
                    ID_PERS_ENTI.dataSource.read();

                    CargarActivos();
                }
            }).data("kendoComboBox");

            var ID_PERS_ENTI = $("#ID_PERS_ENTI").kendoComboBox({
                dataTextField: "CLIE",
                dataValueField: "ID_PERS_ENTI",
                //cascadeFrom: 'ID_COMP',
                filter: "contains",
                autoBind: true,
                delay: 500,
                minLength: 0,
                suggest: true,
                dataSource: {
                    schema: {
                        data: "Data",
                        total: "Count"
                    },
                    transport: {
                        //read: "/Asset/ListarAfectadosxUMinBNV?var=" + Math.random()
                        read: {
                            url: "/Asset/ListarAfectadosxGrupoBNV",
                            data: function () {
                                return {
                                    id: id,
                                    idUMin: ID_COMP.value(),
                                    idGrupo: IdGrupoActivo.value(),
                                    var: Math.random()
                                };
                            }
                        }
                    }
                }
            }).data("kendoComboBox");

            var Locacion = $("#Locacion").kendoComboBox({
                dataTextField: "NAM_LOCA",
                dataValueField: "ID_LOCA",
                cascadeFrom: 'ID_COMP',
                template: '<div><div style="font-weight:bold;">${ data.NAM_SITE }</div>' +
                    '<div>${ data.NAM_LOCA }</div></div>',
                filter: "contains",
                autoBind: false,
                delay: 500,
                minLength: 0,
                suggest: true,
                dataSource: {
                    serverFiltering: true,
                    schema: {
                        data: "Data",
                        total: "Count"
                    },
                    transport: {
                        //read: "/Asset/ListarLocacionBNV?idGrupo=" + idGroup + "&var=" + Math.random()
                        read: {
                            url: "/Asset/ListarLocacionBNV",
                            data: function() {
                                return {
                                    idGrupo: IdGrupoActivo.value(),
                                    var: Math.random()
                                };
                            }
                        }
                    }
                }
            }).data("kendoComboBox");

            $("#chkExcepcion").change(function () {
                if (this.checked) {
                    id = 3;
                    ID_PERS_ENTI.value("");
                    ID_PERS_ENTI.dataSource.read();
                } else {
                    id = 2;
                    ID_PERS_ENTI.value("");
                    ID_PERS_ENTI.dataSource.read();
                }
            });


        } else {
            var ID_PERS_ENTI = $("#ID_PERS_ENTI").kendoComboBox({
            index:1,
            dataTextField: "Usuario",
            dataValueField: "ID_PERS_ENTI",
            value:@ViewBag.IdPersEnti,
            filter: "contains",
            autoBind: true,
            delay: 500,
            minLength: 0,
            suggest: true,
            dataSource: {
                schema: {
                    data: "Data",
                    total: "Count"
                },
                transport: {
                    read: "/AccountEntity/ListarPersonaPorCompania?IdPersEnti="+@ViewBag.IdPersEnti+"&var=" + Math.random()
                }
            }
            }).data("kendoComboBox");

            ID_PERS_ENTI.bind("change", function (e) {
                ObtenerCargoxUsuario(ID_PERS_ENTI.dataItem().ID_PERS_ENTI);
            });

        }

