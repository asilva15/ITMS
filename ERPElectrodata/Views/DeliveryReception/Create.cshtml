<script src="~/Content/themes/plugin/toastr/toastr.min.js"></script>
<link href="~/Content/themes/plugin/toastr/toastr.min.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-8">
        <div class="mb-3 card">
            <div class="card-header-tab card-header">Nueva Entrega de Activo</div>
            <div class="card-body">
                <div class="inBodyForm" id="Encabezado">
                    @using (Html.BeginForm("Create", "DeliveryReception", FormMethod.Post, new { enctype = "multipart/form-data", id = "FormDeliveryReception", target = "upload_target" }))
                    {
                        @Html.ValidationSummary(true)
                        <fieldset>
                            @Html.HiddenFor(model => model.ID_TYPE_TICK)
                            @Html.HiddenFor(model => model.ID_CATE)
                            @Html.HiddenFor(model => model.ID_PERS_ENTI_END)
                            @Html.HiddenFor(model => model.ID_PERS_ENTI_ASSI)
                            @Html.HiddenFor(model => model.ID_QUEU)
                            @Html.HiddenFor(model => model.ID_PRIO)
                            @Html.HiddenFor(model => model.ID_STAT)
                            @Html.HiddenFor(model => model.ID_AREA, new { @value = "0" })
                            @Html.HiddenFor(model => model.ID_SOUR)
                            <input type="hidden" id="IdTicket" name="IdTicket" value="@ViewBag.IdTicket" />
                            <input type="hidden" id="Fecha" name="Fecha" value="@ViewBag.FEC_TICK" />
                            <div class="form-group row">
                                @if (Convert.ToInt32(Session["ID_ACCO"].ToString()) == 60)
                                {
                                    <div class="col-md-4">
                                        <div class="editor-label">
                                            Grupo <b style="color:red">(*)</b>
                                        </div>
                                        <div class="editor-field">
                                            @Html.TextBoxFor(model => model.IdGrupoActivo)
                                            @Html.ValidationMessageFor(model => model.IdGrupoActivo)
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="editor-label">
                                            Unidad Minera <b style="color:red">(*)</b>
                                        </div>
                                        <div class="editor-field">
                                            @Html.TextBoxFor(model => model.ID_COMP)
                                            @Html.ValidationMessageFor(model => model.ID_COMP)
                                        </div>
                                    </div>
                                }
                                else if (Convert.ToInt32(Session["ID_ACCO"].ToString()) == 55)
                                {
                                    <input type="hidden" name="IdGrupoActivo" id="IdGrupoActivo" value="@ViewBag.IdGrupoIT" />
                                }
                                <div class="col-md-4">
                                    <div class="editor-label">
                                        Usuario <span class="cMinsur divHide">asignado</span><b style="color:red">(*)</b>
                                    </div>
                                    <div class="editor-field">
                                        @Html.TextBoxFor(model => model.ID_PERS_ENTI)
                                        @Html.ValidationMessageFor(model => model.ID_PERS_ENTI)
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="editor-label">
                                        Fecha de Entrega (mm/dd/yyyy) <b style="color:red">(*)</b>
                                    </div>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.FEC_TICK)
                                        @Html.ValidationMessageFor(model => model.FEC_TICK)
                                    </div>
                                </div>
                                <div class="col-md-4 divLoca">
                                    <div class="editor-label">
                                        Locación <b style="color:red">(*)</b>
                                    </div>
                                    <div class="editor-field">
                                        @Html.TextBoxFor(model => model.ID_LOCA)
                                        @Html.ValidationMessageFor(model => model.ID_LOCA)
                                    </div>
                                </div>
                                @if (Convert.ToInt32(Session["ID_ACCO"].ToString()) == 60)
                                {
                                    <div class="col-md-4">
                                        <div class="editor-label">
                                            Locación
                                        </div>
                                        <div class="editor-field">
                                            <input id="Locacion" name="Locacion" />
                                        </div>
                                    </div>
                                    <div class="col-md-4" id="divMicroinformatico" style="display: none;">
                                        <div class="editor-label">
                                            Ubicación
                                        </div>
                                        <div class="editor-field">
                                            <input id="Ubicacion" name="Ubicacion" class="form-control" />
                                        </div>
                                    </div>
                                }
                            </div>
                            @if (Convert.ToInt32(Session["ID_ACCO"].ToString()) == 1)
                            {
                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <div class="editor-label">
                                            Usado Por Contratista
                                        </div>
                                        <div class="k-check">
                                            <input id='PorContratista' type='checkbox' name='PorContratista'>
                                        </div>
                                    </div>
                                    <div class="col-md-3 divContratista" style="display: none;">
                                        <div class="editor-label">
                                            Empresa
                                        </div>
                                        <div class="editor-field">
                                            <input id="EmpresaContratista" name="EmpresaContratista" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-3 divContratista" style="display: none;">
                                        <div class="editor-label">
                                            Usuario
                                        </div>
                                        <div class="editor-field">
                                            <input id="UsuarioContratista" name="UsuarioContratista" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-3 divContratista" style="display: none;">
                                        <div class="editor-label">
                                            Área
                                        </div>
                                        <div class="editor-field">
                                            <input id="AreaContratista" name="AreaContratista" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="form-group row cMinsur divHide">
                                <div class="col-md-4">
                                    <div class="editor-label">
                                        Usuario Responsable<b style="color:red">(*)</b>
                                    </div>
                                    <div class="editor-field">
                                        <input id="IdUsuarioResponsable" name="IdUsuarioResponsable" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <div class="editor-label">
                                        Comentario <b id="bMicroinformatico" style="color:red">(*)</b>
                                    </div>
                                    <div class="editor-field">
                                        @Html.TextAreaFor(model => model.SUM_TICK)
                                        @Html.ValidationMessageFor(model => model.SUM_TICK)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <input name="files" id="files" type="file" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <div id="divAssetsAdd" style="width: 100%;"></div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                </div>
                                <div class="col-md-3">
                                    <button id="reset" type="button" class="btn btn-light btn-block" onclick="cancel(); return false;">Limpiar</button>
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" class="ladda-button mb-2 mr-2 btn btn-primary btn-block" data-style="expand-right" id="submit" onclick="enviarForm(this)">
                                        <span class="ladda-label">
                                            <i class="fa fa-save"></i> Guardar
                                        </span>
                                        <span class="ladda-spinner"></span>
                                        <div class="ladda-progress" style="width: 0px;"></div>
                                    </button>
                                    <style>
                                        /* Estilo para el botón deshabilitado */
                                        .ladda-button.disabled {
                                            pointer-events: none;
                                        }
                                    </style>
                                </div>
                            </div>
                            <iframe id="upload_target" name="upload_target" src="" style="display:none;"></iframe>

                            <input id="idsActivo" type="hidden" name="idsActivo" value="" />
                            <input id="idsCondicion" type="hidden" name="idsCondicion" value="" />
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="mb-3 card">
            <div class="card-header-tab card-header">Agregar Activo</div>
            <div class="card-body">
                <fieldset>
                    <div class="form-row" id="alertaPerfilActivo">
                        <div class="col-md-12">
                            <div class="editor-label">
                                Este cargo no tiene un perfil de activos asignado
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <div id="divUsuario" style="width:100%">
                            </div>
                            <div class="row divLocaText">
                                <div class="col-md-3 editor-label">
                                    <strong>Locación: </strong>
                                </div>
                                <div class="col-md-9 editor-field">
                                    <span class="">@ViewBag.Locacion</span>
                                </div>
                            </div>
                            <div class="row divLocaText">
                                <div class="col-md-3 editor-label">
                                    <strong>DNI: </strong>
                                </div>
                                <div class="col-md-9 editor-field">
                                    <span class="">@ViewBag.DNI</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row" id="divGestionarCambio">
                        <div class="col-md-5">
                            <br />
                            <button id='btnGestionarCambio' name='btnGestionarCambio' class="btn btn-primary btn-block" type="button" data-toggle="modal" data-target="#miModal" onclick="GestionarCambio(@ViewBag.IdTicket)">Gestionar Cambio</button>
                        </div>
                    </div>
                    <div class="form-group row" id="divExcepcionUsuarios" style="display: none;">
                        <div class="col-md-12">
                            <div class="editor-label">
                                Excepción de Usuarios
                            </div>
                            <div class="k-check">
                                <input id='chkExcepcion' type='checkbox' name='chkExcepcion'>
                            </div>
                        </div>
                    </div>
                    <div class="form-row" id="divBuscarActivo">
                        <div class="col-md-12">
                            <div class="editor-label">
                                Buscar Activo
                            </div>
                            <div class="k-textbox" style="width:100%">
                                <input id='txtActivo' type='text' name='ID_ASSE' title="Código de Activo, Equipo, Serie">
                            </div>
                        </div>
                    </div>
                    @if (Convert.ToInt32(Session["ID_ACCO"].ToString()) != 60)
                    {
                        <div class="form-group row">
                            <div class="col-md-12">
                                <div class="editor-label">
                                    Tipo Activo
                                </div>
                                <div class="editor-field">
                                    <input id='cmbTipoActivo' type='text' name='cmbTipoActivo'>
                                </div>
                            </div>
                        </div>
                    }
                    <div style="overflow-y:auto; height:360px; width:100%;">
                        <div id="gridActivos">
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>

</div>


