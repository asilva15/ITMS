@{
    Layout = null;
}


<table class="table table-bordered table-striped" id="tbProductos">
    <thead>
        <tr>
            <th>Nro</th>
            <th>Código Producto</th>
            <th>Cantidad</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {

        $('#tbProductos').dataTable().fnDestroy();
        var idDocSale='@ViewBag.ID_DOCU_SALE'
        var table = $('#tbProductos').DataTable({
            responsive: true,
            dom: 'Bfrtip',
            'order': [[0, 'asc']],
            //'select': 'multi',
            ajax: {
                "url": "/OrderForm/ListarProductos/" + idDocSale,
            },
            columns: [
                { data: "ORDEN" },
                { data: "CODE" },
                { data: "QUANTITY" },
                { data: "DESC_DETA" }
            ],
            buttons: [
                'csv', 'excel', 'pdf', 'print'
            ]
        });
    });

</script>
