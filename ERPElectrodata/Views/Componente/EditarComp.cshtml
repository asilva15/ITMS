@model ERPElectrodata.Models.Componente
@{
    ViewBag.Title = "Editar";
    Layout = null;
}
<script>
    $(document).ready(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>

<div id="FormEditarComponente">
    <div class="form-row" id="divContainerNewTicket">
        <div class="col-md-12">
            <div id="divNuevaLicencia">
                <!--Declaración de Formulario-->
                @using (Html.BeginForm("EditarCom", "Componente", FormMethod.Post, new { enctype = "multipart/form-data", id = "FormEditarComponente", target = "upload_target" }))
                {
                    @Html.HiddenFor(model => model.IdComponente)
                    @Html.HiddenFor(model => model.IdTipoActivo)
                    @Html.HiddenFor(model => model.IdAcco)
                    @Html.HiddenFor(model => model.UsuarioCrea)
                    @Html.HiddenFor(model => model.FechaCrea)
                    @Html.HiddenFor(model => model.IdCuentaTipoActivo)

                    <fieldset>
                        @*<legend>Cuenta Tipo Activo</legend>*@

                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="editor-label">
                                        Cuenta
                                    </div>
                                    <input id="NAM_ACCO" class="form-control" type="text" name="NAM_ACCO" value="@ViewBag.NAM_ACCO" disabled="disabled">
                                </div>

                                <div class="col-md-6">
                                    <div class="editor-label">
                                        Tipo Activo
                                    </div>
                                    <input id="NAM_TYPE_ASSE" class="form-control" type="text" name="NAM_TYPE_ASSE" value="@ViewBag.NAM_TYPE_ASSE" disabled="disabled">
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label for="Nombre">
                                        Nombre<b style="color:red">*</b>
                                    </label>
                                    <input id="Nombre" class="form-control" type="text" name="Nombre" value="@ViewBag.Nombre">
                                </div>

                                <div class="col-md-6">
                                    <div class="editor-label">
                                        Estado
                                    </div>
                                    <div class="mt-2">
                                        @Html.CheckBox("Estado", true)
                                        @Html.ValidationMessageFor(model => model.Estado)
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-12">
                                    <div class="editor-label">
                                        Descripcion
                                    </div>
                                    <div class="">
                                        <input id="Descripcion" name="Descripcion" class="form-control" value="@ViewBag.Descripcion" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        @*<div class="form-group">
                            <div class="form-row">
                                <div style="display:inline-block; float:right; padding:0px 15px 15px 5px;">
                                    <div style=" float:right; padding:0px 15px 0px 0px; ">
