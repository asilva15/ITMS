@model ERPElectrodata.Models.DETAILS_TICKET

@{
    Layout = null;
}

<style type="text/css">
    .FondoGris01 {
        background-color: #F7F7F7;
        display: inline-block;
        text-align: left;
        vertical-align: middle;
        padding: 2px 0 0 0;
