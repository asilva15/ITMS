        }
        else {
            strTitle = 'Entrega # @ViewData["COD_TICK"]';
        }
        $("#titleDetDelRec").empty();
        $("#titleDetDelRec").append(strTitle);

        $("#Encabezado").empty();
        $.each(data['data'], function (index, value) {
            $("#Encabezado").append(
