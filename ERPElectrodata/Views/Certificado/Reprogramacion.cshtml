    @Html.ValidationSummary(true)

    <input type="hidden" id="Id" name="Id" value="@ViewBag.Id" />

    <div class="tab-content">
        <div class="row">
            <div class="col-md-12">
                <div class="main-card mb-3 card">
                    <div class="card-body">
