        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        CargarAreas(1, 'divGoldFields', 'GOLD FIELDS');
        CargarAreas(3, 'divHudbay', 'HUDBAY');
        CargarAreas(19, 'divBrocal', 'BROCAL');
    });

    function CargarAreas(idCuenta, div, NombreCuenta) {
        $.ajax({
            url: "/Cmdb/ObtenerAreaPorCuenta/" + idCuenta,
            type: "GET",
            cache: false,
            dataType: "json",
            success: function (source) {
                $("#" + div).empty();
                $("#" + div).append('<div class="inner">' +
                                                '<h2>' + NombreCuenta + '</h2>' +
                                            '</div>' +
                                            '<div class="icon">' +
                                                '<i class="ion ion-android-globe"></i>' +
                                            '</div>');
                $.each(source['Data'], function (index, value) {
                    $("#" + div).append('<a href="#/cmdbservicioOutsourcing/' + (source['Data'][index]['ID_ACCO_QUEUE']) + '" class="small-box-footer">' + (source['Data'][index]['ACR_ACCO']) + '.' + (source['Data'][index]['NAM_QUEU']) + ' <i class="fa fa-arrow-circle-right"></i></a>');
                });
            },
            error: function (source) {
                alert("Error Carga Areas");
            }
        });
    }

</script>