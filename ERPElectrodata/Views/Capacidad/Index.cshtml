            <br />
            <div id="Parametro">
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1">
                        <div class="box">
                            <!-- /.box-header -->
                            <div class="box-body">
                                <table id="tablaGestionCapacidad" class="table table-bordered table-striped" style="width:100%">
