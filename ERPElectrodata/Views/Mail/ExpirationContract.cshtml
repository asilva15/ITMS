
@model IEnumerable<ERPElectrodata.Models.V_Employees>
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SendMail</title>
</head>
<body>
    <table width="600px" cellspacing="0" cellpadding="0" border="0" bgcolor="#ffffff" align="center" style="width:600px;">
        <tr>
            <td colspan="3">
                <table cellspacing="0" cellpadding="0" border="0" style="width:100%;background-color:@ViewBag.Color;color:white;font-family:'Segoe UI',Verdana,sans-serif;">
                    <tr>
                        <td colspan="2">&nbsp;</td>
                    </tr>
                    <tr>
                        <td style="text-align:right;font-size:20px;">Expiration @ResourceLanguaje.Resource.Contract</td>
                        <td style="width:15px;"></td>
                    </tr>
                    <tr>                        
                        <td>
                            <table cellspacing="0" cellpadding="0" border="0" style="width:100%;background-color:@ViewBag.Color;color:white;font-family:'Segoe UI',Verdana,sans-serif;">
                                <tr>
                                    <td style="width:85%;">
                                        <table cellspacing="0" cellpadding="0" border="0" style="width:100%;background-color:@ViewBag.Color;color:white;font-family:'Segoe UI',Verdana,sans-serif;">
                                            <tr>
                                                <td style="width:15px;"></td>
                                                <td style="text-align:left; font-size:18px;">@String.Format("{0:dddd MMMM dd yyyy}",DateTime.Now)</td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td style="text-align:left; font-size:20px;">Information Technologies Management System</td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td style="width:15%;">
                                        <div style="width:100%;font-size:32px;text-align:right;">@ViewBag.Dias</div>
                                        <div style="width:100%;font-size:14px;text-align:right;">@ResourceLanguaje.Resource.Days</div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td></td>
                    </tr>
                    <tr>
                        <td colspan="2">&nbsp;</td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="3">&nbsp;</td>
        </tr>
        <tr>
            <td colspan="3">                
                <table style="width:100%;font-size:14px;" cellspacing="0" cellpadding="1" border="0">
                    <tr style="background-color:@ViewBag.Color;font-family:'Segoe UI',Verdana,sans-serif;color:white;">
                        <td style="width:15px;">&nbsp;</td>
                        <td style="width:155px;">English Version</td>
                        <td style="width:15px;"></td>
                        <td colspan="3"></td>
                    </tr>
                    <tr>
                        <td colspan="6">&nbsp;</td>
                    </tr>                    
                </table>
                @foreach (var item in Model){
                <table style="width:100%;font-size:14px;font-family:Calibri,'Segoe UI',Verdana,sans-serif;" cellspacing="0" cellpadding="1" border="0">
                    <tr>
                        <td style="width:30px;">&nbsp;</td>
                        <td style="width:140px;"><b>Employee</b></td>
                        <td style="width:15px;">:</td>
                        <td>@Html.DisplayFor(modelItem => item.FIR_NAME) @Html.DisplayFor(modelItem => item.LAS_NAME)</td>
                        <td style="width:30px;">&nbsp;</td>
                    </tr>
                    <tr>
                        <td style="width:30px;">&nbsp;</td>
                        <td style="width:140px;"><b>Start Date</b></td>
                        <td style="width:15px;">:</td>
                        <td>
                            @String.Format("{0:MM/dd/yyyy}", item.STAR_DATE)
                        </td>
                        <td style="width:30px;">&nbsp;</td>
                    </tr>
                    <tr>
                        <td style="width:30px;">&nbsp;</td>
                        <td style="border-top:1px solid @ViewBag.Color;border-bottom:1px solid @ViewBag.Color;"><b>End Date</b></td>
                        <td style="border-top:1px solid @ViewBag.Color;border-bottom:1px solid @ViewBag.Color;">:</td>
                        <td style="border-top:1px solid @ViewBag.Color;border-bottom:1px solid @ViewBag.Color;">@String.Format("{0:MM/dd/yyyy}", item.END_DATE)</td>
                        <td>&nbsp;</td>
                    </tr>
                    <tr>
                        <td style="width:30px;">&nbsp;</td>    
                        <td><b>Site - Location</b></td>
                        <td>:</td>
                        <td>@Html.DisplayFor(modelItem => item.NAM_SITE) - @Html.DisplayFor(modelItem => item.NAM_LOCA)</td>
                        <td>&nbsp;</td>
                    </tr>
                    <tr>
                        <td colspan="5">&nbsp;</td>
                    </tr> 
                </table>
                }
                <table style="width:100%;font-size:14px;" cellspacing="0" cellpadding="1" border="0">
                    <tr style="background-color:@ViewBag.Color;font-family:'Segoe UI',Verdana,sans-serif;color:white;">
                        <td style="width:15px;">&nbsp;</td>
                        <td style="width:155px;">Versión en Español</td>
                        <td style="width:15px;"></td>
                        <td colspan="3"></td>
                    </tr>
                    <tr>
                        <td colspan="6">&nbsp;</td>
                    </tr>                    
                </table>
                @foreach (var item in Model){
                <table style="width:100%;font-size:14px;font-family:Calibri,'Segoe UI',Verdana,sans-serif;" cellspacing="0" cellpadding="1" border="0">
                    <tr>
                        <td style="width:30px;">&nbsp;</td>
                        <td style="width:140px;"><b>Empleado</b></td>
                        <td style="width:15px;">:</td>
                        <td>@Html.DisplayFor(modelItem => item.FIR_NAME) @Html.DisplayFor(modelItem => item.LAS_NAME)</td>
                        <td style="width:30px;">&nbsp;</td>
                    </tr>
                    <tr>
                        <td style="width:30px;">&nbsp;</td>
                        <td style="width:140px;"><b>Fecha Inicio</b></td>
                        <td style="width:15px;">:</td>
                        <td>
                            @String.Format("{0:MM/dd/yyyy}", item.STAR_DATE)
                        </td>
                        <td style="width:30px;">&nbsp;</td>
                    </tr>
                    <tr>
                        <td style="width:30px;">&nbsp;</td>
                        <td style="border-top:1px solid @ViewBag.Color;border-bottom:1px solid @ViewBag.Color;"><b>Fecha Fin</b></td>
                        <td style="border-top:1px solid @ViewBag.Color;border-bottom:1px solid @ViewBag.Color;">:</td>
                        <td style="border-top:1px solid @ViewBag.Color;border-bottom:1px solid @ViewBag.Color;">@String.Format("{0:MM/dd/yyyy}", item.END_DATE)</td>
                        <td>&nbsp;</td>
                    </tr>
                    <tr>
                        <td style="width:30px;">&nbsp;</td>    
                        <td><b>Sitio - Ubicación</b></td>
                        <td>:</td>
                        <td>@Html.DisplayFor(modelItem => item.NAM_SITE) - @Html.DisplayFor(modelItem => item.NAM_LOCA)</td>
                        <td>&nbsp;</td>
                    </tr>
                    <tr>
                        <td colspan="5">&nbsp;</td>
                    </tr> 
                </table>
                }
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <table style="width:100%; color:white;font-size:14px;font-family:'Segoe UI',Verdana,sans-serif;" cellspacing="0" cellpadding="1" border="0">
                    <tr style="background-color:@ViewBag.Color">
                        <td style="width:15px;">&nbsp;</td>
                        <td colspan="5">Links</td>
                    </tr>
                    <tr>
                        <td colspan="6">&nbsp;</td>
                    </tr>
                </table>
                <table style="width:100%;font-size:14px;font-family:Calibri,'Segoe UI',Verdana,sans-serif;" cellspacing="0" cellpadding="1" border="0">
                    <tr>
                        <td style="width:30px;">&nbsp;</td>
                        <td style="width:140px;"><b>Administrator Talent</b></td>
                        <td style="width:15px;">:</td>
                        <td><a href="@ViewBag.AdminTalent">@ViewBag.AdminTalent</a></td>
                        <td style="width:30px;">&nbsp;</td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="3">&nbsp;</td>
        </tr>
        <tr>
            <td colspan="3">
                <table style="width:100%; color:white;font-size:14px;font-family:'Segoe UI',Verdana,sans-serif;" cellspacing="0" cellpadding="1" border="0">
                    <tr style="background-color:@ViewBag.Color">
                        <td style="width:15px;">&nbsp;</td>
                        <td colspan="5">Share Page</td>
                    </tr>
                    <tr>
                        <td colspan="6">&nbsp;</td>
                    </tr>
                </table>
                <table style="width:100%;">
                    <tr>
                        <td style="width:30px;"></td>
                        <td style="width:40px;"><img src="~/Content/Images/social/social-facebook.png" /></td>
                        <td style="width:40px;"><img src="~/Content/Images/social/social-twitter.png" /></td>
                        <td style="width:40px;"><img src="~/Content/Images/social/social-linkedin.png" /></td>
                        <td ><img src="~/Content/Images/social/social-email.png" /></td>
                        <td style="width:30px;"></td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="3">&nbsp;</td>
        </tr>
        <tr>
            <td colspan="3">
                <table style="width:100%; color:black; " cellspacing="0" cellpadding="1" border="0">
                    <tr style="background-color:#EAEAEA">
                        <td style="width:15px;">&nbsp;</td>
                        <td><span style="font-family:'Segoe UI',Verdana,sans-serif; font-size:12px;" >&copy; @DateTime.Now.Year Electrodata All Rights Reserved</span></td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="3">&nbsp;</td>
        </tr>
    </table>
</body>
</html>
