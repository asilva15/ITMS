<script type="text/javascript">
    $(document).ready(function () {
        $("#divCuerpo").load("/KnowledgeManagement/ViewLessonsLearnedByUserReport?var=" + Math.random());

        $("#btnReporteUsuario").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('LECCIONES POR USUARIO');
            $("#divCuerpo").load("/KnowledgeManagement/ViewLessonsLearnedByUserReport?var=" + Math.random());
        });

        $("#btnReporteCategoria").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('LECCIONES POR CATEGORIA');
            $("#divCuerpo").load("/KnowledgeManagement/ViewLessonsByCategoryReport?var=" + Math.random());
        });

        $("#btnReporteMensual").click(function () {
            $("#divCuerpo").empty();
            $("#spanTitulo").html('LECCIONES MENSUALES');
            $("#divCuerpo").load("/KnowledgeManagement/ViewLessonsMensual?var=" + Math.random());
        });
    });


</script>