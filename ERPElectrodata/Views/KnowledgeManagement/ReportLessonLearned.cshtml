<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="fa fa-file icon-gradient bg-sunny-morning"> </i>
            </div>
            <div>
                Reportes
                <div class="page-title-subheading">
                    Reporte de Gestores Clave
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <div class="main-card mb-3 card element-block-example">
            <div class="card-body">
                <div class="card-title">Opciones</div>
                <form class="">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="position-relative form-group">
                                <button id="btnReporteUsuario" class="mt-1 btn btn-primary btn-block block-element-btn-example-1" type="button">Por Usuario</button>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="position-relative form-group">
                                <button id="btnReporteCategoria" class="mt-1 btn btn-primary btn-block block-element-btn-example-1" type="button">Por Categoria</button>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="position-relative form-group">
                                <button id="btnReporteMensual" class="mt-1 btn btn-primary btn-block block-element-btn-example-1" type="button">Reporte Mensual</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-10">
        <div class="main-card mb-3 card element-block-example">
            <div id="divCuerpo">
            </div>
        </div>
    </div>
</div>

