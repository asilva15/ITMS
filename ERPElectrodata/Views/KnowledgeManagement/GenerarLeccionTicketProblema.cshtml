@{
    Layout = null;
}

<div class="afterMain" id="divContainerNewLessonLearned">
    <div style="float:left;width:100%">
        <div class="bodyForm" id="divNewLessonLearned">
            <div class="inBodyForm">
                <!--Declaración de Formulario-->
                @using (Html.BeginForm("GuardarLeccionTicketProblema", "KnowledgeManagement", FormMethod.Post, new { id = "form_create", name = "form_create" }))
                {
                    @(Html.Hidden("hdCuenta", (int)ViewBag.idCuenta))
                    <input type="hidden" value="@ViewBag.UploadFile" name="KEY_ATTA" id="KEY_ATTA" readonly="readonly" />
                    <input type="hidden" id="idCalificacion" name="idCalificacion" readonly="readonly" />
                   <input type="hidden"  id="idTicket"  value="@ViewBag.IdTicket" readonly="readonly" />
                    <input type="hidden" value="@ViewBag.CombosEdicion" id="combos" name="combos" readonly="readonly" />
                    <input type="hidden" value="@ViewBag.valorPerfil" id="idPerfilAprobador" name="idPerfilAprobador" readonly="readonly" />
                    <input type="hidden" value="@ViewBag.idLeccionAprendida" id="idLeccionAprendidaAprobador" name="idLeccionAprendidaAprobador" readonly="readonly" />
                    <input type="hidden" value="@ViewBag.TypeOperation" id="idTypeOperacion" name="idTypeOperacion" readonly="readonly" />
                    <fieldset>
                        <legend>LECCION APRENDIDA</legend>
                        <div class="divFondoDos">
                            <div class="divSpace3"></div>
                            <div style="float:left;">
                                <div class="editor-label">
                                    Título
                                </div>
                                <div class="editor-field">
                                    <input type="text" id="Titulo" class="form-control" style="width:500%" />
                                </div>
                            </div>
                        </div>
                        <div class="divFondoDos">
                            <div class="divSpace3"></div>
                            <div style="float:left;">
                                <div class="editor-label">
                                    Unidad de Negocio
                                </div>
                                <div class="editor-field">
                                    @(Html.Editor("Nivel1"))
                                </div>
                            </div>
                            <div class="divSpace3"></div>
                            <div style="float:left;">
                                <div class="editor-label">
                                    Macroservicio
                                </div>
                                <div class="editor-field">
                                    @Html.Editor("Nvel2")
                                </div>
                            </div>
                            <div class="divSpace3"></div>
                            <div style="float:left;">
                                <div class="editor-label">
                                    Servicio
                                </div>
                                <div class="editor-field">
                                    @Html.Editor("Nivel3")
                                </div>
                            </div>
                          
                        </div>
                        <div class="divFondoDos">
                            <div class="divSpace3"></div>
                            <div style="float:left;">
                                <div class="editor-label">
                                    Incidente/Requerimiento
                                </div>
                                <div class="editor-field">
                                    @Html.Editor("Nivel4")
                                </div>
                            </div>
                            <div class="divSpace3"></div>
                            <div style="float:left;">
                                <div class="editor-label">
                                    Tema
                                </div>
                                <div class="editor-field">
                                    @(Html.Editor("IdTema"))
                                </div>
                            </div>
                        </div>
                        <div class="divFondoDos">
                            <div class="dadjuntos" style="padding:5px 0px 0px 40px;"></div>
                        </div>
                        <div class="divFondoDos">

                            <div class="divSpace3"></div>
                            <div style="width:95.5%;float:left;">
                                <div class="editor-label">
                                    Descripción del problema
                                </div>
                                <div class="editor-field">
                                    @Html.TextArea("DescripcionProblema")
                                </div>
                            </div>

                        </div>
                        <div class="divFondoDos">

                            <div class="divSpace3"></div>
                            <div style="width:95.5%;float:left;">
                                <div class="editor-label">
                                    Solución aplicada
                                </div>
                                <div class="editor-field">
                                    @Html.TextArea("SolucionAplicada")
                                </div>
                            </div>

                        </div>
                        <div class="divFondoDos">

                            <div class="divSpace3"></div>
                            <div style="width:95.5%;float:left;">
                                <div class="editor-label">
                                    Impacto en el negocio
                                </div>
                                <div class="editor-field">
                                    @Html.TextArea("Impactonegocio")
                                </div>
                            </div>

                        </div>
                        <div class="divFondoDos">

                            <div class="divSpace3"></div>
                            <div style="width:95.5%;float:left;">
                                <div class="editor-label">
                                    Solución Temporal
                                </div>
                                <div class="editor-field">
                                    @Html.TextArea("SolucionTemporal")
                                </div>
                            </div>

                        </div>
                        <div class="divFondoDos">

                            <div class="divSpace3"></div>
                            <div style="width:95.5%;float:left;">
                                <div class="editor-label">
                                    Solución definitiva
                                </div>
                                <div class="editor-field">
                                    @Html.TextArea("SolucionDefinitiva")
                                </div>
                            </div>

                        </div>
                        <div class="divFondoUno">
                            <div class="divSpace3"></div>
                            <div style="width:95.5%;float:left;">
                                <div id="listAttach">

                                </div>
                            </div>
                        </div>
                    </fieldset>
                }
                <div style="display:inline-block; float:right; padding:0px 15px 15px 5px;">
                    <div style=" float:left; padding:0px 15px 0px 0px; ">
                        <button id="idGuardarLeccionAprendida" class="k-button">Crear</button>
                    </div>
                </div>


            </div>
        </div>
    </div>

    <!--Código HTML para adjuntar archivos.-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">Adjuntar Archivos</h4>
                </div>
                <div class="modal-body">
                    <div class="editor-label">
                        Tipo de Documento
                    </div>
                    <div class="editor-field">
                        @Html.TextBox("ArrayFile")
                    </div>
                    <br />
                    <input name="files" id="files" type="file" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="k-button" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/Itms/LeccionAprendida/NuevaLeccionTicketProblema.js")" type="text/javascript"></script>


