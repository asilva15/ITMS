$(document).ready(function () {

    $.ajax({
            url: '/Assistance/StaffByUEN?var=' + Math.random(),
            dataType: 'json',
            cache: false,
            async: true,
            success: function (json) {

                var cat = [];
                var catUEN = {};
                var lim1 =  [];
                var lim2 = [];
                var lim3 = [];
                var lim4 = [];
                var serie1 = [];
                var serie2 = [];
                var serie3 = [];
                var serie4 = [];

                //var cat = [];
                var catS = [];
                var catSS = [];
                var pie = [];
                var dona = [];
                var serie = [];

                $.each(json['Data'], function (index, value) {
                    if (typeof catUEN[value['ID_UEN']] == 'undefined') {
                        catUEN[value['ID_UEN']] = value['QUANTITY'];
                    }
                    else {
                        catUEN[value['ID_UEN']] = catUEN[value['ID_UEN']] + value['QUANTITY'];
                    }
                });

                $.each(catUEN, function (i, item) {
                    var color = null;
                    var nombre = null;
                    var limite = [];
                    var linea = [];
                    var cantidad = 0;
                    $.each(json['Data'], function (index, value) {

                        if (value['ID_UEN'] == i) {
                            limite.push([value['MonthYear'], value['MIN_QUAN'], value['MAX_QUAN']]);
                            linea.push([value['MonthYear'], value['QUANTITY']]);
                            color = value['COLOR'];
                            nombre = value['NAM_CHAR'];
                            cantidad = value['QUANTITY'];
                        }

                    });
                    serie.push({
                        name: toTitleCase(nombre),
                        type: 'arearange',
                        //linkedTo: i,
                        color: color,
                        data: limite
                    }, {
                        name: toTitleCase(nombre),
                        type: 'line',
                        //id: i,
                        linkedTo: ':previous',
                        color: color,
                        data: linea
                    });

                    pie.push({
                        name: toTitleCase(nombre),
                        y: cantidad,
                        color: color
                    });
                });

                //Inicio Grafico Area
                $('#STAFF_QTY').highcharts({
                    chart:{
                        zoomType: 'xy'
                    },
                    title: {
                        text: null
                    },
                    credits:{
                        enabled:false
                    },
                    xAxis: {
                        categories: cat
                        ,gridLineWidth: 0
                        ,lineWidth: 1
                    },
                    yAxis:{
                        lineWidth: 1
                        , gridLineWidth: 0
                        , title: {
                            text:'Employees'
                        }
                    },
                    plotOptions: {
                        arearange: {
                            fillOpacity: 0.15,
                            lineWidth:0,
                            showInLegend:true
                        },
                        line: {
                            marker: {
                                symbol: "circle"
                            }
                        }
                    },
                    tooltip:{
                        crosshairs: true,
                        shared: true,
                        formatter: function () {
                            var cadena = "";
                            var limite = "";
                            $.each(this.points, function (index, value) {
 
                                if (value.point.options.low === undefined) {
                                    //var decimal = 'x0' + String(Math.round(((value.y) - parseInt(value.y)) * 100 * 60) / 100);
                                    cadena += '<span style="color:' + value.series.color + '">' + this.series.name + '</span>:\t<b>' +
                                       limite+ this.y + '</b><br/>';
                                }
                                else {
                                    limite = value.point.options.low + " - " + value.point.options.high+" | "
                                }
                            });
                            return cadena;
                        }
                    },
                    labels: {
                        items: [{
                            //html: 'Total fruit consumption',
                            style: {
                                left: '40px',
                                top: '8px',
                                color: 'black'
                            }
                        }]
                    },
                    series: serie
                });
                //Fin Gráfico Área
                chart = new Highcharts.Chart({
                    chart: {
                        renderTo: 'StaffBySBU',
                        type: 'pie'
                    },
                    credits: { enabled: false },
                    title: {
                        text: ''
                    },
                    yAxis: {
                        title: {
                            text: null
                        }
                    },
