@model  ERPElectrodata.Models.GrupoHorario

@{
    Layout = null;
}

<style>
</style>
<link href="~/Content/themes/plugin/toastr/toastr.min.css" rel="stylesheet" />
<script src="~/Content/themes/plugin/toastr/toastr.min.js"></script>
@*<script type="text/javascript" src="js/jquery.js"></script>*@

@*<div class="box">*@


@using (Html.BeginForm("EditarDias", "HorarioGruposResolutores", FormMethod.Post, new { enctype = "multipart/form-data", id = "FrmEditarDias", target = "upload_target" }))
{
    @Html.ValidationSummary(true)


    <input type="hidden" id="Id" name="Id" value="@ViewBag.Id" />
    <div class="row">
        <div class="col-md-12" style="text-align:center">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <form class="">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="position-relative form-group">
                                    <label id="lblEditarDias" for="EditarDias" class="">Edite los días</label>

                                </div>
                            </div>
                        </div>
                        <div class="form-row">

                            <div class="col-md-4">
                                <div class="position-relative form-group">
                                    <label id="lblDias" for="Dias" class="">Días <span style="color:red">*</span></label>

                                </div>
                            </div>
                            <div class="col-md-8" style="text-align:left;">

                                @Html.CheckBox("Lunes", (bool)@ViewBag.Lunes)
                                @Html.ValidationMessageFor(model => model.Lunes)<label>Lunes</label>
                                @Html.CheckBox("Martes", (bool)@ViewBag.Martes)
                                @Html.ValidationMessageFor(model => model.Martes)<label>Martes</label>
                                @Html.CheckBox("Miercoles", (bool)@ViewBag.Miercoles)
                                @Html.ValidationMessageFor(model => model.Miercoles)<label>Miércoles</label>
                                @Html.CheckBox("Jueves", (bool)@ViewBag.Jueves)
                                @Html.ValidationMessageFor(model => model.Jueves)<label>Jueves</label><br />
                                @Html.CheckBox("Viernes", (bool)@ViewBag.Viernes)
                                @Html.ValidationMessageFor(model => model.Viernes)<label>Viernes</label>
                                @Html.CheckBox("Sabado", (bool)@ViewBag.Sabado)
                                @Html.ValidationMessageFor(model => model.Sabado)<label>Sábado</label>
                                @Html.CheckBox("Domingo", (bool)@ViewBag.Domingo)
                                @Html.ValidationMessageFor(model => model.Domingo)<label>Domingo</label>
                            </div>
                        </div>
                        <div class="form-row">


                            <div class="col-md-12" style="text-align:center;">
                                <div class="position-relative form-group">
                                    <button type="submit" id="btnEditarDias" class="btn-shadow btn btn-success btn-sm">Editar los Días</button>
                                </div>
                            </div>

                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

}
<iframe id="upload_target" name="upload_target" src="" class="frameHidden" style="display:none"></iframe>
<script>

    function uploadDone(msg, code) {
        if (msg == "OK") {

            toastr.success("Se actualizaron los días.", "Días Actualizados");

            $(".modal-backdrop").remove();
            $("#miModal").removeClass("show");
            $("[data-dismiss=modal]").trigger({ type: "click" });
            ObtenerDatosHorario(@ViewBag.Id);
            }

            else {
            var title = 'Advertencia';


            swal({
            title: title,
            type: 'info',
            text: code,
            focusConfirm: false,
            confirmButtonText:
            'Continuar',
            confirmButtonAriaLabel: 'Thumbs up, great!'

            })
            }

    }

</script>
