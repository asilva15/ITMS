@model  ERPElectrodata.Models.GrupoHorario
@{
    ViewBag.Title = "EditarFeriados";
}
@{
    Layout = null;
}

<style>
</style>
<link href="~/Content/themes/plugin/toastr/toastr.min.css" rel="stylesheet" />
<script src="~/Content/themes/plugin/toastr/toastr.min.js"></script>
@*<script type="text/javascript" src="js/jquery.js"></script>*@

@*<div class="box">*@


@using (Html.BeginForm("EditarFeriados", "HorarioGruposResolutores", FormMethod.Post, new { enctype = "multipart/form-data", id = "FrmEditarFeriados", target = "upload_target" }))
{
    @Html.ValidationSummary(true)


    <input type="hidden" id="Id" name="Id" value="@ViewBag.Id" />
    <div class="row">
        <div class="col-md-12" style="text-align:center">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <form class="">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="position-relative form-group">
                                    <label id="lblEditarFeriados" for="EditarFeriados" class="">Edite Feriados</label>

                                </div>
                            </div>
                        </div>
                        <div class="form-row">

                            <div class="col-md-4">
                                <div class="position-relative form-group">
                                    <label id="lblFeriados" for="Feriados" class="">Feriados <span style="color:red">*</span></label>

                                </div>
                            </div>
                            <div class="col-md-push-8" style="text-align:left;">
                                @Html.RadioButton("IsActive", true, (bool)@ViewBag.Si) <label>Si</label>                   
                                @Html.RadioButton("IsActive", false, (bool)@ViewBag.No) <label>No</label>

                            </div>
                        </div>
                        <div class="form-row">


                            <div class="col-md-12" style="text-align:center;">
                                <div class="position-relative form-group">
                                    <button type="submit" id="btnEditarDias" class="btn-shadow btn btn-success btn-sm">Editar Feriados</button>
                                </div>
                            </div>

                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

}
<iframe id="upload_target" name="upload_target" src="" class="frameHidden" style="display:none"></iframe>
<script>

    function uploadDone(msg, code) {
        if (msg == "OK") {

            toastr.success("Se actualizó la opción de feriados.", "Opción de Feriados Actualizado");

            $(".modal-backdrop").remove();
            $("#miModal").removeClass("show");
            $("[data-dismiss=modal]").trigger({ type: "click" });
            ObtenerDatosHorario(@ViewBag.Id);
            }

            else {
            var title = 'Advertencia';


            swal({
            title: title,
            type: 'info',
            text: code,
            focusConfirm: false,
            confirmButtonText:
            'Continuar',
            confirmButtonAriaLabel: 'Thumbs up, great!'

            })
            }

    }

</script>


