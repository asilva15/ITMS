                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col-md-12">
                                        <div class="editor-label">
                                            Descripción<b>*</b>
                                        </div>
                                        <div>
                                            @Html.TextAreaFor(model => model.DESC_COMM_MODE, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.DESC_COMM_MODE)
                                        </div>
                                    </div>
                                </div>
                            </div>

