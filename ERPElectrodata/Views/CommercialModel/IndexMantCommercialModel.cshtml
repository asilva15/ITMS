<script type="text/javascript">

    $(document).ready(function () {

        $("#Buscar").click(function () {

            $("#pagerdivCommercialModel").empty();
            $("#divCommercialModel").empty();

            if ($("#divCommercialModel").data("kendoListView")) {
                $("#pagerdivCommercialModel").data("kendoPager").destroy();
                $("#divCommercialModel").data("kendoListView").destroy();
            }
            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: "/CommercialModel/ListarBuscarCommercialModelTodo/0?var",
                        type: "GET",
                        dataType: "json",
                        data: {
                            q: "#kendoui",
                            ran: Math.random(),
                            ID_MANU: $("#ID_MANU").val() == '' ? 0 : $("#ID_MANU").val(),
                            NAM_COMM_MODE: $("#NAM_COMM_MODE").val(),
                            ESTADO: $("#EstadoMC").val() == '' ? '' : $("#EstadoMC").val()
                        }
                    }
                },
                autoSync: true,
                serverFiltering: true,
                serverPaging: true,
                pageSize: 15,
                schema: {
                    data: "Data",
                    total: "Cantidad"
                }
            });

            $("#pagerdivCommercialModel").kendoPager({
                dataSource: dataSource,
                pageSizes: [5, 10, 15],
                refresh: true
            });

            $("#divCommercialModel").kendoListView({
                dataSource: dataSource,
                template: kendo.template($("#plantillaCommercialModel").html())
            });

        });

        $("#Buscar").click();



        var Estadof = [{ text: "Activo", value: "1" }, { text: "Inactivo", value: "0" }];

        var Estado = $("#EstadoMC").kendoComboBox({
            autoBind: true,
            dataTextField: "text",
            dataValueField: "value",
            suggest: true,

            filter: "contains",
            delay: 500,
            minLength: 0,
            suggest: true,

            dataSource: Estadof,
            index: 0
        }).data("kendoComboBox");


        var ID_TYPE_ASSE = $("#ID_MANU").kendoComboBox({
            autoBind: true,
            dataTextField: "NAM_MANU",
            dataValueField: "ID_MANU",
            filter: "contains",
            delay: 500,
            minLength: 0,
            suggest: true,
            dataSource: {
                schema: {
                    data: "Data",
                    total: "Count"
                },
                transport: {
                    read: "/ManufacturerModel/ListarManufacturerCombo?var=" + Math.random()
                }
            }
        }).data("kendoComboBox");

        //$("#reset").click(function (event) {
        //    event.preventDefault();
        //    location.reload(true);
        //});

    });


</script>

