    }
}

<div id="divContent">
    <div class="app-page-title mb-2">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="fa fa-archive icon-gradient bg-sunny-morning"> </i>
                </div>
