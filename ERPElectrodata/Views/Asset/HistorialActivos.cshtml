@{
    ViewBag.Title = "HistorialActivos";
    Layout = null;
}

<div>
    <table id="tablaHistorialActivos" class="table table-striped table-hover" style="width:100%">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>Ticket</th>
                <th>Creado por</th>
                <th>Fecha creación</th>
                <th>Estado</th>
                <th>Prioridad</th>
                <th>Usuario Final</th>
            </tr>
        </thead>
        <tbody></tbody>
        <tfoot>
            <tr>
                <th></th>
                <th></th>
                <th>Ticket</th>
                <th>Creado por</th>
                <th>Fecha creación </th>
                <th>Estado</th>
                <th>Prioridad</th>
                <th>Usuario Final</th>
            </tr>
        </tfoot>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        ListarHistorialActivos();
    });

    function ListarHistorialActivos() {
        $('#tablaHistorialActivos').dataTable().fnDestroy();

        $('#tablaHistorialActivos').DataTable({
            "order": [[0, "desc"]],
            responsive: true,
            dom: 'Bfrtip',
            ajax: "/Asset/ListarHistorialActivos/" + @ViewBag.IdActivo,
            columns: [
                { data: "IdTicket" },
                { data: "Tipo" },
                {
                    data: null,
                    render: function (data, type, row) {
                        return '<a href="\\DeliveryReception/Details/'+data.IdTicket+'" target="_BLANK"> '+data.CodigoTicket+'</a>';
                    }
                },
                { data: "UsuarioCreacion" },
                { data: "Fecha" },
                { data: "Estado" },
                { data: "Prioridad" },
                { data: "UsuarioFinal" },
                
            ],
            "columnDefs": [
            {
                "targets": [0],
                "visible": false,
                "searchable": false
            }
            ],
            buttons: [
                {
                    extend: 'collection',
                    text: 'Export',
                    buttons: [
                        'excel',
                        'csv',
                        'pdf'
                    ]
                }
            ],
            "pageLength": 15,
            "language": {
                "lengthMenu": "Mostrar _MENU_ Registros por página",
                "info": "Mostrando página _PAGE_ de _PAGES_ de _TOTAL_ registros",
                "infoEmpty": "No hay registros disponibles",
                "infoFiltered": "(filtrada de _MAX_ registros)",
                "loadingRecords": "Cargando...",
                "processing": "Procesando...",
                "search": "Buscar:",
                "zeroRecords": "No se encontraron registros coincidentes",
                "paginate": {
                    "next": "Siguiente",
                    "previous": "Anterior"
                },
            },

        });

    }

</script>
